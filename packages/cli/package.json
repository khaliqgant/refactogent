{
  "name": "refactogent",
  "version": "0.1.0",
  "description": "Refactogent CLI - Safe, incremental code refactoring assistant",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "refactogent": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:check": "tsc --noEmit",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json,md}\"",
    "clean": "rm -rf dist",
    "check": "npm run format:check && npm run build:check && npm run lint && npm run test",
    "ci": "npm run clean && npm run check && npm run build",

    "prepublishOnly": "npm run ci"
  },
  "keywords": [
    "refactoring",
    "cli",
    "code-quality",
    "ast",
    "safety",
    "typescript",
    "python",
    "go",
    "developer-tools"
  ],
  "author": "Refactogent Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/khaliqgant/refactogent.git",
    "directory": "packages/cli"
  },
  "bugs": {
    "url": "https://github.com/khaliqgant/refactogent/issues"
  },
  "homepage": "https://github.com/khaliqgant/refactogent#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],

  "dependencies": {
    "@refactogent/core": "file:../core",
    "commander": "^12.1.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.1.2",
    "@types/commander": "^2.12.5",
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "eslint": "^8.57.0",

    "jest": "^29.7.0",

    "prettier": "^3.3.3",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.0"
  }
}