{
  "name": "@refactogent/mcp-server",
  "version": "0.1.0",
  "description": "Model Context Protocol server for AI-powered refactoring with safety guardrails",
  "main": "build/index.js",
  "type": "module",
  "bin": {
    "refactogent-mcp": "./build/index.js"
  },
  "files": [
    "build",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
    "build:check": "tsc --noEmit",
    "dev": "tsc && node build/index.js",
    "watch": "tsc --watch",
    "test": "echo \"No tests yet\" && exit 0",
    "test:inspector": "npm run build && npx @modelcontextprotocol/inspector build/index.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json,md}\"",
    "clean": "rm -rf build",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "refactoring",
    "claude",
    "ai",
    "code-quality",
    "typescript",
    "safety"
  ],
  "author": "Refactogent Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/khaliqgant/refactogent.git",
    "directory": "packages/mcp-server"
  },
  "bugs": {
    "url": "https://github.com/khaliqgant/refactogent/issues"
  },
  "homepage": "https://github.com/khaliqgant/refactogent#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.0",
    "@modelcontextprotocol/sdk": "^0.6.0",
    "@refactogent/core": "*",
    "dotenv": "^16.4.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.19.21",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "typescript": "^5.9.3"
  }
}
