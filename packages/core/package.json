{
  "name": "@refactogent/core",
  "version": "0.1.0",
  "description": "Refactogent Core - Shared utilities and analysis engine",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "build:tsc": "tsc -p tsconfig.json",
    "build:check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest tests/cli-integration.test.ts",
    "test:performance": "jest tests/performance.test.ts",
    "test:all": "npm run test && npm run test:integration && npm run test:performance",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json,md}\"",
    "clean": "rm -rf dist",
    "check": "npm run format:check && npm run build:check && npm run lint && npm run test",
    "ci": "npm run clean && npm run check && npm run build",
    "prepublishOnly": "npm run ci"
  },
  "keywords": [
    "refactoring",
    "ast",
    "analysis",
    "code-quality",
    "typescript",
    "python",
    "go"
  ],
  "author": "Refactogent Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/khaliqgant/refactogent.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/khaliqgant/refactogent/issues"
  },
  "homepage": "https://github.com/khaliqgant/refactogent#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "glob": "^10.3.10",
    "js-yaml": "^4.1.0",
    "path-scurry": "^1.11.1",
    "ts-morph": "^20.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.1.2",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.1.2",
    "tsup": "^8.5.0",
    "typescript": "^5.4.0"
  }
}
