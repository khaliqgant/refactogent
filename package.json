{
  "name": "refactogent",
  "version": "0.7.2",
  "type": "module",
  "description": "AI-powered refactoring agent for JavaScript and TypeScript projects",
  "main": "packages/cli/dist/index.js",
  "bin": {
    "refactogent": "packages/cli/dist/index.js"
  },
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "dev": "npm run dev --workspaces",
    "lint": "npm run lint --workspaces",
    "format": "npm run format --workspaces",
    "clean": "npm run clean --workspaces",
    "prepare": "husky install"
  },
  "workspaces": [
    "packages/*"
  ],
  "keywords": [
    "refactoring",
    "javascript",
    "typescript",
    "ai",
    "automation",
    "code-quality"
  ],
  "author": "Refactogent Team",
  "dependencies": {
    "@babel/core": "^7.28.4",
    "@babel/generator": "^7.28.3",
    "@babel/parser": "^7.28.4",
    "@babel/traverse": "^7.28.4",
    "@babel/types": "^7.28.4",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.64.1",
    "@opentelemetry/sdk-node": "^0.205.0",
    "@playwright/test": "^1.55.0",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "js-yaml": "^4.1.0",
    "playwright": "^1.55.0",
    "ts-morph": "^20.0.0",
    "vitest": "^1.0.0",
    "zod": "^4.1.11"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "husky": "^8.0.3",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
