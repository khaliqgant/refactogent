{
  "name": "refactogent-vscode",
  "displayName": "Refactogent",
  "description": "Safe, incremental code refactoring with behavior preservation guarantees",
  "version": "0.1.0",
  "publisher": "refactogent",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Linters",
    "Formatters"
  ],
  "keywords": [
    "refactoring",
    "code-quality",
    "safety",
    "typescript",
    "python",
    "go",
    "ast"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:javascript",
    "onLanguage:python",
    "onLanguage:go"
  ],
  "contributes": {
    "commands": [
      {
        "command": "refacto.stabilize",
        "title": "Stabilize Project",
        "category": "Refactogent",
        "icon": "$(shield)"
      },
      {
        "command": "refacto.organizeOnly",
        "title": "Organize Code",
        "category": "Refactogent",
        "icon": "$(file-directory)"
      },
      {
        "command": "refacto.nameHygiene",
        "title": "Improve Naming",
        "category": "Refactogent",
        "icon": "$(symbol-string)"
      },
      {
        "command": "refacto.microSimplify",
        "title": "Micro-Simplify",
        "category": "Refactogent",
        "icon": "$(lightbulb)"
      },
      {
        "command": "refacto.publicSurface",
        "title": "Show Public API Surface",
        "category": "Refactogent",
        "icon": "$(eye)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "refacto.stabilize",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "refacto.organizeOnly",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "refacto.nameHygiene",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "refacto.microSimplify",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "refacto.publicSurface",
          "when": "workspaceFolderCount > 0"
        }
      ]
    },
    "configuration": {
      "title": "Refactogent",
      "properties": {
        "refactogent.cliPath": {
          "type": "string",
          "default": "refactogent",
          "description": "Path to the Refactogent CLI executable"
        },
        "refactogent.autoStabilize": {
          "type": "boolean",
          "default": false,
          "description": "Automatically run stabilization tests before refactoring"
        },
        "refactogent.outputChannel": {
          "type": "boolean",
          "default": true,
          "description": "Show Refactogent output in VS Code output channel"
        }
      }
    }
  },
  "main": "./dist/extension.js",
  "scripts": {
    "compile": "tsc -p .",
    "watch": "tsc -w -p .",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/khaliqgant/refactogent.git",
    "directory": "refactogent-starter/vscode-extension"
  },
  "bugs": {
    "url": "https://github.com/khaliqgant/refactogent/issues"
  },
  "homepage": "https://github.com/khaliqgant/refactogent#readme",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "@vscode/test-electron": "^2.3.9",
    "@vscode/vsce": "^2.24.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.0"
  }
}