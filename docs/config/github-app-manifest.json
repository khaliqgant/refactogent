{
  "name": "Refactogent",
  "url": "https://github.com/khaliqgant/refactogent",
  "hook_attributes": {
    "url": "https://your-domain.com/refactogent/webhooks"
  },
  "redirect_url": "https://your-domain.com/refactogent/setup",
  "callback_url": "https://your-domain.com/refactogent/oauth/callback",
  "request_oauth_on_install": false,
  "public": false,
  "default_permissions": {
    "contents": "write",
    "pull_requests": "write",
    "checks": "write",
    "metadata": "read",
    "issues": "write"
  },
  "default_events": [
    "push",
    "pull_request",
    "check_run",
    "issue_comment"
  ]
}